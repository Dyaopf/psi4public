# Makefile for Sphinx documentation

#include ../MakeVars
#include ../MakeRules

# You can set these variables from the command line.
SPHINXOPTS    = -w warnings.txt
SPHINXBUILD   = sphinx-build
PAPER         =
BUILDDIR      = build
SOURCEDIR     = source
SRCSOURCEDIR  = @srcdir@/source

# Internal variables.
PAPEROPT_a4     = -D latex_paper_size=a4
PAPEROPT_letter = -D latex_paper_size=letter
ALLSPHINXOPTS   = -d $(BUILDDIR)/doctrees $(PAPEROPT_$(PAPER)) $(SPHINXOPTS) $(SOURCEDIR)

.PHONY: help clean html pickle changes latexpdf-user latexpdf-prog realclean psi4docs html-user html-prog prep

all: html

discard = \
expert_keywords.tex keywords.tex physconst.tex psi4bases.tex \
psi4bases.html tests_descriptions.tex variables_list.tex warnings.txt \
$(SOURCEDIR)/index.rst $(SOURCEDIR)/appendices.rst $(SOURCEDIR)/PsiMod.pyc

help:
	@echo "For PSI4, use one of"
	@echo "  html                to make html complete manual"
	@echo "  html-user           to make html user manual"
	@echo "  html-prog           to make html programmer manual"
	@echo "  latexpdf-user       to make LaTeX pdf user manual"
	@echo "  latexpdf-prog       to make LaTeX pdf programmer manual"
	@echo "  clean               to clean intermediate and autodoc files"
	@echo "  realclean           to clean additionally the build directory"

clean:
	-rm -rf $(SOURCEDIR)/autod* $(discard)

realclean: clean
	-rm -rf $(SOURCEDIR)/*.rst $(SOURCEDIR)/*.png $(SOURCEDIR)/*.txt $(SOURCEDIR)/PsiMod.py
	-rm -rf $(BUILDDIR)

prep:
	mkdir -p $(BUILDDIR)
	mkdir -p $(SOURCEDIR)/autodir_options_c
	mkdir -p $(SOURCEDIR)/autodir_plugins
	mkdir -p $(SOURCEDIR)/autodir_psivariables


#####  auto-doc dependencies and generation  #####

# psivariable dependencies (all C++ code) not implemented
autosource1 = \
@top_srcdir@/include/physconst.h \
@top_srcdir@/src/bin/psi4/read_options.cc \
@top_srcdir@/tests/*/input.dat

# plugin C++ dependencies not implemented, using *.py as proxy
autosource2 = \
@top_srcdir@/lib/databases/*.py \
@top_srcdir@/lib/python/*.py \
@top_srcdir@/tests/plugin_*/*.py

autosource3 = \
@top_srcdir@/lib/basis/*.gbs

autosource4 = \
$(SRCSOURCEDIR)/template_index.rst \
$(SRCSOURCEDIR)/template_appendices.rst

autotarget1 = \
autodoc_abbr_options_c.rst \
autodoc_glossary_options_c.rst \
autodoc_options_c_bymodule.rst \
autodoc_psivariables_bymodule.rst \
autodoc_testsuite.rst \
autodir_options_c/module__scf.rst \
autodir_options_c/scf__scf_type.rst \
autodir_psivariables/module__scf.rst

autotarget2 = \
autodoc_abbr_options_plugins.rst \
autodoc_available_databases.rst \
autodoc_available_plugins.rst \
autodoc_driver.rst \
autodir_plugins/glossary__plugin_aointegrals.rst \
autodir_plugins/module__plugin_aointegrals.rst \
autodir_plugins/plugin_aointegrals__print.rst

autotarget3 = \
autodoc_psi4bases.rst

autotarget4 = \
autodoc_index_html.rst      autodoc_appendices_html.rst \
autodoc_index_htmluser.rst  autodoc_appendices_htmluser.rst \
autodoc_index_htmlprog.rst  autodoc_appendices_htmlprog.rst \
autodoc_index_latexuser.rst autodoc_appendices_latexuser.rst \
autodoc_index_latexprog.rst autodoc_appendices_latexprog.rst

autotarget1: prep $(autosource1)
	@srcdir@/document_options_tests_physconst_psivariables.pl @srcdir@

autotarget2: prep $(autosource2)
	@srcdir@/document_python_modules.py @srcdir@

autotarget3: $(autosource3)
	@srcdir@/document_bases.pl @srcdir@

autotarget4: $(autosource4)
	@srcdir@/separate_userprogman.py @srcdir@

AUTODOC = autotarget1 autotarget2 autotarget3 autotarget4

#####  static docs  #####

MISCDOC = psi4banner.png man_PsiMod.txt PsiMod.py

STATICDOC = \
abbr_accents.rst adc.rst basissets.rst basissets_byelement.rst \
bestpractices_py.rst bibliography.rst cbs.rst cbs_eqn.rst \
contributing.rst cp.rst customizing.rst db.rst detci.rst dfmp2.rst \
documentation.rst energy.rst external.rst freq.rst glossary_psivariables.rst \
intercalls.rst interfacing.rst introduction.rst methods.rst notes_c.rst \
notes_py.rst opt.rst optking.rst plugins.rst programming.rst prop.rst \
psimod.rst psithonfunc.rst psithoninput.rst quickaddalias.rst \
quickaddbasis.rst quickadddatabase.rst sapt.rst sowreap.rst testsuite.rst \
tutorial.rst

$(MISCDOC): %: $(SRCSOURCEDIR)/%
	/bin/cp -p $(SRCSOURCEDIR)/$(@F) $(SOURCEDIR)/$(@F)

%.rst: $(SRCSOURCEDIR)/%.rst
	/bin/cp -p $(SRCSOURCEDIR)/$(@F) $(SOURCEDIR)/$(@F)

#####  run Sphinx with html/latex builder with index/appendices contents variations  #####

html: $(AUTODOC) $(STATICDOC) $(MISCDOC)
	cp -p $(SOURCEDIR)/autodoc_index_html.rst $(SOURCEDIR)/index.rst
	cp -p $(SOURCEDIR)/autodoc_appendices_html.rst $(SOURCEDIR)/appendices.rst
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(BUILDDIR)/html
	@echo
	@echo "Build finished. The HTML pages are in $(BUILDDIR)/html."

html-user: $(AUTODOC) $(STATICDOC) $(MISCDOC)
	cp -p $(SOURCEDIR)/autodoc_index_htmluser.rst $(SOURCEDIR)/index.rst
	cp -p $(SOURCEDIR)/autodoc_appendices_htmluser.rst $(SOURCEDIR)/appendices.rst
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(BUILDDIR)/html-user
	@echo
	@echo "Build finished. The HTML pages are in $(BUILDDIR)/html-user."

html-prog: $(AUTODOC) $(STATICDOC) $(MISCDOC)
	cp -p $(SOURCEDIR)/autodoc_index_htmlprog.rst $(SOURCEDIR)/index.rst
	cp -p $(SOURCEDIR)/autodoc_appendices_htmlprog.rst $(SOURCEDIR)/appendices.rst
	$(SPHINXBUILD) -b html $(ALLSPHINXOPTS) $(BUILDDIR)/html-prog
	@echo
	@echo "Build finished. The HTML pages are in $(BUILDDIR)/html-prog."

latexpdf-user: $(AUTODOC) $(STATICDOC) $(MISCDOC)
	cp -p $(SOURCEDIR)/autodoc_index_latexuser.rst $(SOURCEDIR)/index.rst
	cp -p $(SOURCEDIR)/autodoc_appendices_latexuser.rst $(SOURCEDIR)/appendices.rst
	$(SPHINXBUILD) -b latex $(ALLSPHINXOPTS) $(BUILDDIR)/latex-user
	@echo "USERMAN Running LaTeX files through pdflatex..."
	$(MAKE) -C $(BUILDDIR)/latex-user all-pdf
	@echo "USERMAN pdflatex finished; the PDF files are in $(BUILDDIR)/latex-user."
	mv $(BUILDDIR)/latex-user/Psi4.pdf $(BUILDDIR)/latex-user/psi4_userman.pdf

latexpdf-prog: $(prep) $(AUTODOC) $(STATICDOC) $(MISCDOC)
	cp -p $(SOURCEDIR)/autodoc_index_latexprog.rst $(SOURCEDIR)/index.rst
	cp -p $(SOURCEDIR)/autodoc_appendices_latexprog.rst $(SOURCEDIR)/appendices.rst
	$(SPHINXBUILD) -b latex $(ALLSPHINXOPTS) $(BUILDDIR)/latex-prog
	@echo "PROGMAN Running LaTeX files through pdflatex..."
	$(MAKE) -C $(BUILDDIR)/latex-prog all-pdf
	@echo "PROGMAN pdflatex finished; the PDF files are in $(BUILDDIR)/latex-prog."
	mv $(BUILDDIR)/latex-prog/Psi4.pdf $(BUILDDIR)/latex-prog/psi4_progman.pdf

#####  End  #####
