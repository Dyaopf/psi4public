
SHELL = /bin/sh

#
# Initialize variables that have been figured out by configure.
#

target = i386-apple-darwin10.8.0

prefix = /usr/local/psi4
exec_prefix = ${prefix}
bindir = ${exec_prefix}/bin
libdir = ${exec_prefix}/lib
incdir = ${prefix}/include
docdir = ${datarootdir}/doc/${PACKAGE_TARNAME}
manext = 1
mandir = ${datarootdir}/man
htmldir = ${docdir}
txtdir = $(docdir)/txt
datadir = ${datarootdir}
datarootdir = ${prefix}/share
pkgdatadir=$(datadir)/psi
top_srcdir = /Users/masaaki/psi4
# this file is used by the subdirectories, so top_objdir is relative to those
top_objdir = ../../..
objincdir = @objincdir@

PWD = $(shell pwd)
RANLIB = ranlib
YACC = @YACC@
CC = mpicc
CXX = mpicxx
FC = gfortran
LD = $(CXX)
MKDIRS = $(top_srcdir)/bin/mkdirs.sh
INSTALL = /usr/bin/install -c
INSTALL_INCLUDE = $(top_srcdir)/bin/installinc.sh
INSTALL_DATA = ${INSTALL} -m 644
INSTALL_PROGRAM = ${INSTALL}

PSICPPFLAGS = -I. -I$(top_objdir)/include -I$(top_srcdir)/include -I$(top_srcdir)/src/lib -I$(top_objdir)/src/lib -I$(top_srcdir)/madness/include -I$(top_srcdir)/madness/src/lib -I$(top_objdir)/madness/include
CPPFLAGS = 

CDEF = 
CDEF += -DUSE_LIBCHKPT
COPT = -O2
COTH = 
CDBG = 
CINC = $(CPPFLAGS) $(PSICPPFLAGS)

CXXDEF =       
CXXDEF += -DUSE_LIBCHKPT 
CXXOPT = -O2
CXXOTH =  -fopenmp
CXXDBG = 
CXXINC = $(CPPFLAGS) $(PSICPPFLAGS)

FDEF = 
FOPT = -O
FOTH = 
FDBG = -g
FINC = $(CPPFLAGS) $(PSICPPFLAGS)
FSTATIC = 

# The suffix generated by the -M compiler option
CCDEPENDSUF = none
CXXDEPENDSUF = none
CCDEPENDFLAGS = -M
CXXDEPENDFLAGS = -M
CCDEPEND = $(CC)
CXXDEPEND = $(CXX)

# flags to be passed to compilers
CFLAGS = $(CDBG) $(COPT) $(CDEF) $(COTH) $(CINC)
CXXFLAGS = $(CXXDBG) $(CXXOPT) $(CXXDEF) $(CXXOTH) $(CXXINC)
FFLAGS = $(FDBG) $(FOPT) $(FOTH) $(FSTATIC)
FFLAGS_NOSTATIC = $(FOPT) $(FOTH) $(FDBG)

# set up suffixes needed for various files
F77SUF = f
OBJSUF = o
LIBSUF = a

FLIBS =  -L/usr/local/gfortran/lib/gcc/x86_64-apple-darwin10.3.0/4.5.1 -L/usr/local/gfortran/lib/gcc/x86_64-apple-darwin10.3.0/4.5.1/../../.. -llapack -lblas -lgfortran
CLIBS =  -lm
CXXLIBS =  -lm
BLAS = /Users/masaaki/lib/libgoto2_penrynp-r1.13.a $(FLIBS)
LAPACK =   $(BLAS)

# where to find main for fortran programs
ALLOC = allocate.o
vpath allocate.o $(top_objdir)/lib:$(libdir)

# we are mostly compiling C programs here
LDFLAGS =  -fopenmp
LDLIBS = $(CLIBS) -lpthread

# these are the most commonly used libraries
PSILIBS = libipv1.a libciomr.a

vpath %.a $(top_objdir)/lib:$(libdir)

#
# have target default to the name of the directory we're in
#
PSITARGET = $(shell basename `pwd`)

# Force -lx to only look for libx.a.
.LIBPATTERNS = lib%.a

#
# Initialize other variables.
#
.LIBPATTERNS = lib%.a

