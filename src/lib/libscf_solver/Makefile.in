
srcdir = @srcdir@
VPATH = @srcdir@

include ../MakeVars

PSITARGET = $(top_objdir)/lib/libPSI_scf_solver.a

TRUECXXSRC = hf.cc   rhf.cc  rohf.cc uhf.cc df.cc rks.cc uks.cc integrator.cc\
	 functionalfactory.cc x_lda_functional.cc null_functional.cc\
         x_b88_functional.cc x_b3_functional.cc

DEPENDINCLUDE = hf.h   rhf.h  rohf.h uhf.h rks.h uks.h integrator.h\
	 functional.h functionalfactory.h x_lda_functional.h null_functional.h\
         x_b88_functional.h x_b3_functional.h

LIBOBJ = $(TRUECXXSRC:%.cc=%.o)

include ../MakeRules

install_inc:: $(DEPENDINCLUDE)
	$(MKDIRS) $(incdir)/libtrans
	$(INSTALL_INCLUDE) $^ $(incdir)/libtrans

ifneq ($(DODEPEND),no)
include $(LIBOBJ:%.o=%.d)
endif

