#! SCF cc-pVTZ geometry optimzation, with Z-matrix input

# These values are from a tightly converged QChem run

molecule h2o {
  symmetry c1
     O
     H 1 1.0
     H 1 1.0 2 104.5
# QChem optimized geometry
#  O           0.000000    0.000000    0.091671
#  H          -0.751206    0.000000   -0.474387
#  H           0.751206    0.000000   -0.474387
}

set globals {
#  diis false
  basis cc-pvtz
  e_converge 10
  d_converge 10
}

# We need to tighten up the Optking convergence criteria, when this is available
# Hack variables
cycle = 0
returnValue = 0
thisenergy = 0.0

while (cycle < 20 and returnValue != PsiReturnType.EndLoop):
    thisenergy = energy('scf')
    deriv()
    returnValue = optking()
    cycle = cycle + 1


clean()
