# *** Test frequencies by 5-pt formula for A1 irrep only.

molecule h2o {
  O
  H 1 0.9894093
  H 1 0.9894093 2 100.02688
}

set globals { points 5 }

a1_freqs = PsiMod.Vector(2)
a1_freqs.set(0, 0, anal_freqs[0])
a1_freqs.set(0, 1, anal_freqs[1])

frequencies('scf', irrep=1)
fd_freqs = PsiMod.reference_wavefunction().frequencies()

compare_vectors(a1_freqs, fd_freqs, 3, "A1 frequencies only (5-pt. formula)")

del a1_freqs
clean()

