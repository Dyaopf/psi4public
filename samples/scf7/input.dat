#! SCF cc-pVDZ geometry optimzation, with Z-matrix input

# These values are from a tightly converged QChem run

molecule h2o {
     O
     H 1 1.0
     H 1 1.0 2 104.5
# QChem optimized geometry
# O           0.000000    0.000000    0.100027
# H          -0.748790    0.000000   -0.478565
# H           0.748790    0.000000   -0.478565
}

set globals {
  diis false
  basis cc-pvdz
  e_converge 10
  d_converge 10
}

# We need to tighten up the Optking convergence criteria, when this is available
# Hack variables
cycle = 0
returnValue = 0
thisenergy = 0.0

while (cycle < 20 and returnValue != PsiReturnType.EndLoop):
    thisenergy = energy('scf')
    deriv()
    returnValue = optking()
    cycle = cycle + 1


clean()
