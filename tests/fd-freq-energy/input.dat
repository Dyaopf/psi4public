#! SCF STO-3G finite-difference tests

molecule h2o {
  symmetry c1
  O
  H 1 0.9894093
  H 1 0.9894093 2 100.02688
}

set globals {
  basis sto-3g
  print_lvl 3
  points 3
}

frequencies('scf')
fd_freqs = PsiMod.reference_wavefunction().frequencies()

# analytic second derivatives from PSI3 (for now)
anal_freqs = PsiMod.Vector(3)
anal_freqs.set(0, 0, 2170.045)
anal_freqs.set(0, 1, 4140.001)
anal_freqs.set(0, 2, 4391.065)

# psi3 3-point formula: #A1 force constants
#  0.3546775  -0.2277549
# -0.2277549   0.4721543
#
#B2 force constant
#  0.7296851

compare_vectors(anal_freqs, fd_freqs, 1,
 "Analytic (PSI3) vs. Finite-difference (3-pt.) frequencies from energies to 0.1 cm^-1 (C1)")
del fd_freqs

# Test gradient by 5-point formula
molecule h2o {
  symmetry c1
  O
  H 1 0.9894093
  H 1 0.9894093 2 100.02688
}

set globals {
  basis sto-3g
  print_lvl 3
  points 5
}

frequencies('scf')
fd_freqs = PsiMod.reference_wavefunction().frequencies()

compare_vectors(anal_freqs, fd_freqs, 3,
 "Analytic (PSI3) vs. Finite-difference (5-pt.) frequencies from energies to 0.001 cm^-1 (C1)")

clean()

